<template>
  <view class="container">
    <text class="header">{{rdqTheme}}</text>
    <textarea class="content" placeholder="请输入需要回复的内容" placeholder-style="color:#ccc;" maxlength="{{textMaxLen}}" auto-focus auto-height @input="bindWordLimit" @blur="bindBlur"></textarea>
    <view class="bottom-box">
      <label class="checkbox">
            <switch />是否匿名
          </label>
      <text>还可以输入 {{limitTextLen}} 个字</text>
    </view>
    <view class="btn-box">
      <view class="confirm-btn" @tap="bindReply">发送</view>
    </view>
  </view>
</template>

<script>
  import wepy from "wepy"
  import apis from "../../../../config/apis.js"
  export default class Reply extends wepy.page {
    config = {
      "enablePullDownRefresh": false
    }

    // reply.js
    /**
     * Author: Huanda.Wu
     */
    data = {
      switch: false, // 是否匿名
      rdqId: '', // 话题ID
      rdqTheme: '', // 话题主题
      stuStudentid: '', // 学生学号
      wbContent: '', // 回复的内容
      textMaxLen: '500', // 最多输入字数
      limitTextLen: '500', // 还可以输入的字数
    }
    async onLoad(options) {
      this.rdqId = options.rdqId
      this.rdqTheme = options.rdqTheme
      this.stuStudentid = apis._user.myInfo.stuStudentid
    }

    async toReply(){
      let reply = {}
      reply = await wepy.request({
        url: `${apis._server}/learningsystem/Writeback/replyMessage`,
        method: "GET",
        header: {
          "content-type": "application/x-www-form-urlencoded"
        },
        dataType: "json",
        data: {
          rdqId: this.rdqId,
          stuStudentid: this.stuStudentid,
          wbContent: this.wbContent
        }
      })
      console.log(reply.data)
    }

    

    methods = {
      // 字数限制
      bindWordLimit(e) {
        let value = e.detail.value, len = parseInt(value.length)
        if(len > this.textMaxLen) return
        this.limitTextLen = this.textMaxLen - len
      },
      // 当输入框失焦时存储内容
      binBlur(e){
        this.wbContent = e.detail.value
      },
      bindReply(e) {
        toReply()
      }
    }

  }
</script>

